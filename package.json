{
  "name": "requestly-monorepo",
  "version": "1.1.1",
  "private": true,
  "description": "Requestly monorepo containing web app, browser extension, and shared packages",
  "workspaces": [
    "clients/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "turbo run dev --parallel",
    "dev:web": "turbo run dev --filter=@requestly/web",
    "dev:extension": "turbo run dev --filter=@requestly/extension-common",
    "build": "turbo run build",
    "build:web": "turbo run build --filter=@requestly/web",
    "build:extension": "turbo run build --filter=@requestly/extension-mv3",
    "watch": "turbo run watch",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "type-check": "turbo run type-check",
    "deploy-beta": "./build.sh beta && firebase deploy --only hosting -P requestly-beta",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/requestly/requestly.git"
  },
  "author": {
    "name": "Requestly",
    "email": "contact@requestly.io",
    "url": "https://requestly.com/"
  },
  "license": "SEE LICENSE IN LICENSE",
  "engines": {
    "node": ">=18.18.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.9",
  "bugs": {
    "url": "https://github.com/requestly/requestly/issues"
  },
  "homepage": "https://requestly.com",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/preset-env": "^7.16.4",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "eslint": "^8.23.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "http-server": "^14.1.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.2.1",
    "rollup": "^2.56.3",
    "rollup-plugin-terser": "^7.0.2",
    "turbo": "^2.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,mjs,ts,tsx,json,yaml,yml,css,scss}": "prettier --write",
    "(clients/**).{js,jsx,mjs,ts,tsx}": "eslint -c .eslintrc.js --fix"
  }
}
