{
  "compilerOptions": {
    "outDir": "build",
    "target": "es5",
    "lib": ["es2021", "dom"],
    "module": "esnext",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {}
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src/**/*"]
}
