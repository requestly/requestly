{
  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext",
    "lib": ["es2021", "dom", "dom.iterable"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "allowJs": true,
    "checkJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "noImplicitReturns": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {},
    "types": ["vite/client", "vite-plugin-svgr/client", "chrome"]
  },
  "exclude": ["node_modules", "build"],
  "include": ["./src/**/*"]
}
