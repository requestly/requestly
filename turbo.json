{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": ["NODE_ENV", "BUILD_MODE"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", "builds/**"],
      "cache": true
    },
    "watch": {
      "cache": false,
      "persistent": true
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "start": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "outputs": ["coverage/**"],
      "cache": true
    },
    "type-check": {
      "outputs": [],
      "cache": true
    },
    "preview": {
      "cache": false,
      "dependsOn": ["build"]
    }
  }
}
